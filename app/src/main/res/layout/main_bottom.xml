<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_home"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
            android:onClick="changeTab"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_home"
                    android:src="@mipmap/bid02"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/home_back_unselected"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_touzi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:onClick="changeTab"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_touzi"
                android:src="@mipmap/bid04"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_touzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要投资"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/home_back_unselected"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_me"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:onClick="changeTab"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_me"
                android:src="@mipmap/bid06"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的资产"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/home_back_unselected"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:onClick="changeTab"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_more"
                android:src="@mipmap/bid08"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/home_back_unselected"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
